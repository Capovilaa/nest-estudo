// configurações do banco
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// modelo da tabela
model Employee {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  INTER
  ENGINEER
  ADMIN
}
